    "version": "2.0.0",
    "tasks": [
        {
            "label": "copy cert",
            "type": "shell",
            "command": "sudo cp ~/Library/Application\\ Support/multipass-client-certificate/multipass_cert.pem /var/root/Library/Application\\ Support/multipassd/authenticated-certs/multipass_client_certs.pem"
        },
        {
            "label": "restart multipassd",
            "type": "shell",
            "command": "sudo launchctl kickstart -k system/com.canonical.multipassd"
        }

    ]
}